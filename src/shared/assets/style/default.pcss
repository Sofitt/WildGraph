button {
  @apply bg-gray-300 cursor-pointer hover:bg-yellow-300 transition-colors duration-150 py-2 px-4;
}
input {
  @apply border border-solid border-black px-2 py-1 rounded focus:outline-none focus:border-yellow-500;
}
textarea {
  @apply p-2;
  resize: none;
  border: 1px dashed black;
  &:focus {
    outline: none;
  }
}
